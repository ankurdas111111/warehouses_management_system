# Copy to ".env" (gitignored) so you don't have to prefix DB_PORT=... on every command.
DB_HOST=localhost
DB_PORT=5434
DB_USERNAME=postgres
DB_PASSWORD=postgres

REDIS_URL=redis://localhost:6380/0

AUTO_FULFILL_ENABLED=1
AUTO_FULFILL_ON_CREATE=1
AUTO_FULFILL_DELAY_SECONDS=300

# Sidekiq cron schedule loader (disable if you only run Sidekiq locally sometimes).
SIDEKIQ_CRON_ENABLED=1

# Optional (defaults to Rails secret_key_base), but **recommended**.
# Set a long random value to isolate JWT signing from secret_key_base (especially in production/Render).
# Generate one:
#   bin/rails secret
#   ruby -rsecurerandom -e 'puts SecureRandom.hex(64)'
JWT_SECRET=

ADMIN_USER=admin
ADMIN_PASSWORD=admin


