<div class="card">
  <div class="page-header">
    <div>
      <h2>Sign up</h2>
      <p class="muted">Create an account to place orders, pay securely, and track fulfillment.</p>
    </div>
    <div class="page-actions">
      <a class="btn secondary" href="<%= login_path %>">Login</a>
    </div>
  </div>

  <% if @error.present? %>
    <div class="error"><%= @error %></div>
  <% end %>

  <form method="post" action="<%= signup_path %>">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <div class="row">
      <label>
        Email<br>
        <input type="email" name="email" required placeholder="you@example.com">
      </label>
      <label>
        Password<br>
        <input type="password" name="password" required minlength="6">
      </label>
    </div>

    <div class="row">
      <button type="submit">Create account</button>
      <a class="btn secondary" href="<%= login_path %>">Already have an account?</a>
    </div>
  </form>
</div>


