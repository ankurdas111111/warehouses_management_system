<div class="card">
  <h2>My Orders</h2>
  <p class="muted">
    Shows orders for the logged-in user.
  </p>

  <% if @orders.empty? %>
    <p class="muted">No orders found.</p>
  <% else %>
    <table>
      <thead>
        <tr>
          <th>Order</th>
          <th>Status</th>
          <th>Customer</th>
          <th>Created</th>
          <th>Items</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |o| %>
          <tr>
            <td><a href="<%= order_path(o) %>">#<%= o.id %></a></td>
            <td><%= o.status %></td>
            <td><%= o.customer_email %></td>
            <td><%= o.created_at %></td>
            <td class="muted">
              <%= o.order_lines.map { |l| "#{l.sku.code}Ã—#{l.quantity}" }.join(", ") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>


