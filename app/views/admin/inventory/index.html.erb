<div class="card">
  <div class="page-header">
    <div>
      <h2>Inventory</h2>
      <p class="muted">Stock items (SKU × warehouse) with reserved/available breakdown.</p>
    </div>
    <div class="page-actions">
      <a class="btn secondary" href="<%= admin_skus_path %>">SKUs</a>
      <a class="btn secondary" href="<%= admin_warehouses_path %>">Warehouses</a>
      <a class="btn secondary" href="<%= admin_root_path %>">Admin home</a>
    </div>
  </div>

  <form method="get" action="<%= admin_inventory_index_path %>" class="row">
    <label>
      SKU code<br>
      <input name="sku_code" value="<%= @sku_code.to_s %>" placeholder="e.g. WIDGET">
    </label>
    <label>
      Warehouse code<br>
      <input name="warehouse_code" value="<%= @warehouse_code.to_s %>" placeholder="e.g. WH-A">
    </label>
    <label>
      Location<br>
      <select name="location">
        <option value="">All</option>
        <% warehouse_locations.each do |loc| %>
          <option value="<%= loc %>" <%= "selected" if loc == @location %>><%= loc %></option>
        <% end %>
      </select>
    </label>
    <button type="submit">Filter</button>
    <a class="muted" href="<%= admin_inventory_index_path %>">Clear</a>
  </form>

  <h3>New SKU (with initial stock)</h3>
  <form method="post" action="<%= create_sku_admin_inventory_index_path %>" class="row">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label>
      Code<br>
      <input name="sku[code]" required placeholder="e.g. WIDGET">
    </label>
    <label>
      Name<br>
      <input name="sku[name]" required placeholder="Widget">
    </label>
    <label>
      Price (INR)<br>
      <input name="sku[price_inr]" required value="0" placeholder="e.g. 199.00">
    </label>
    <label>
      Warehouse<br>
      <select name="sku[stocks][][warehouse_code]" required>
        <% @warehouses.each do |w| %>
          <option value="<%= w.code %>"><%= w.code %> — <%= w.location %></option>
        <% end %>
      </select>
    </label>
    <label>
      On hand<br>
      <input type="number" name="sku[stocks][][on_hand]" min="0" required value="0">
    </label>
    <button type="submit">Create</button>
  </form>

  <% if @stock_items.empty? %>
    <div class="empty mt-10">
      <p class="muted m-0">No stock items match these filters.</p>
    </div>
  <% else %>
    <table>
      <thead>
        <tr>
          <th>SKU</th>
          <th>Warehouse</th>
          <th>Location</th>
          <th>On hand</th>
          <th>Reserved</th>
          <th>Available</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @stock_items.each do |si| %>
          <tr>
            <td><%= si.sku.code %></td>
            <td><%= si.warehouse.code %></td>
            <td class="muted"><%= si.warehouse.location %></td>
            <td><%= si.on_hand %></td>
            <td><%= si.reserved %></td>
            <td><%= si.available %></td>
            <td>
              <% if si.reserved.to_i == 0 %>
                <form method="post" action="<%= admin_inventory_path(si) %>" onsubmit="return confirm('Delete this stock item?');">
                  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                  <input type="hidden" name="_method" value="delete">
                  <button type="submit" class="secondary">Delete</button>
                </form>
              <% else %>
                <span class="badge badge--warning">Locked</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>


